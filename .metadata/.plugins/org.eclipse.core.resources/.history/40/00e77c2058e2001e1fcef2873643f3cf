package com.example.demo.services;

import org.springframework.beans.factory.annotation.Autowired;

import com.example.demo.model.productModel;
import com.example.demo.repository.Repository;

public class productServiceImpl implements productService {

	@Autowired
	Repository repo; 
	@Override
	public productModel udpateproducto(productModel product) {
		java.util.Optional<productModel>productM = this.repo.findById(product.getId());
		productModel producupdate = productM.get();
		producupdate.setNombre(product.getNombre());
		producupdate.setPrecio(product.getPrecio());
		repo.save(producupdate);
		return producupdate;
	}

}
